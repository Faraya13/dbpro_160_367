@model LMS.Result

@{
    ViewBag.Title = "Editresult";
    Layout = "~/Views/Shared/MainPageLayout.cshtml";
}

<h2>Editresult</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Result</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Student_Id)

        @Html.HiddenFor(model => model.Student_Name)

        @Html.HiddenFor(model => model.CourseId)

        @Html.HiddenFor(model => model.Class)

        @Html.HiddenFor(model => model.Grade)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
